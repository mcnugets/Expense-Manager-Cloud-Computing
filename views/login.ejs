<% layout('layouts/boilerplate')%>

   <div class="wrapper">
        <div id="formContent">
            <!-- Tabs Titles -->
            
            <h4>Login</h4>

            <div>
                <% if(errors !== " ") {%>
                    <% errors.forEach(function(item){ %>
                        <div class="alert alert-danger mx-4">
                            <%- item %>
                        </div>
                    <%})%> 
                <%}%>
            </div>

            <!-- Login Form -->
            <form method="POST" action="/login" id="login">
                <label for="email"></label><input type="text" id="email" class="fadeIn second" name="email" placeholder="Enter Email" required>
                <label for="password"></label><input type="password" id="password" class="fadeIn third" name="password" placeholder="Enter Password" required>
                
                <div class="col-sm-6 py-3 fadeIn fourth">
                    <a href="#">Forgot Password?</a>
                 </div>
                
                <input type="submit" class="fadeIn fourth" value="Log In">
            </form>

            <!-- Remind Passowrd -->
            <div id="formFooter">
                <a class="underlineHover" href="/signup">Don't have an account? Sign Up</a>
            </div>

        </div>
    </div>   